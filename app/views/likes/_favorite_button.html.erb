<% if current_user.favorite?(micropost) %>
  <%= form_for(current_user.likes.find_by(favorite_id: micropost.id), html: { method: :delete }) do |f| %>
    <%= hidden_field_tag :favorite_id, micropost.id %>
    <%= f.submit 'UnLike', class: 'btn btn-success btn-xs' %>
  <% end %>
<% else %>
  <%= form_for(current_user.likes.build) do |f| %>
    <%= hidden_field_tag :favorite_id, micropost.id %>
    <%= f.submit 'Like', class: 'btn btn-primary btn-xs' %>
  <% end %>
<% end %>